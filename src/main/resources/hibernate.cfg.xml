<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1434;databaseName=Hibernate_Demo;encrypt=true;trustServerCertificate=true;</property>
        <property name="hibernate.connection.username">yash</property>
        <property name="hibernate.connection.password">abc</property>
